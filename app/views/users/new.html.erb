<h1>新規登録画面</h1>

<%= render "shared/header" %>

<%= render "shared/errors", obj: @user %>

<%= form_with model: @user, local: true do |f|%>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
<%= f.submit %>
<% end %>
