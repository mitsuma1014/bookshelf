<h1>みんなの感想</h1>
<div class="container">
  <div class="row">
  <%= link_to "感想を投稿する", :new_review,class:"btn btn-warning btn-sm btn-outline-secondary post" %>
  </div><br>

  <div class="row">
    <%= search_form_for @q do |f| %>
      <%= f.label :title_cont,"タイトル" %>
      <%= f.search_field :title_cont %>
      <%= f.label :author_cont, "著者" %>
      <%= f.search_field :review_authors_author_cont %>
      <%= f.label :genre_cont,"ジャンル" %>
      <%= f.search_field :genre_cont %>
      <%= f.submit %>
    <% end %>
  </div>

  <div class="row">
    <table class="table table-bordered table-sm">
      <thead>
        <tr>
          <th class="table-warning" rowspan = "3",valign=middle>ユーザー</th>
          <th class="table-warning">タイトル</th>
          <th class="table-warning" rowspan ="3">感想</th>
        </tr>
        <tr>
          <th class="table-warning">著者</th>
        </tr>
        <tr>
          <th class="table-warning">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review|%>
        <tr class="review_table">
          <tr>
            <td><%= link_to review.user.name, review.user %></td>
            <td><%= review.title %></td>
            <td rowspan = "3"><%= review.created_at %>
                              <% if review.owned_by?(current_user) %>
                                <%= link_to "編集", [:edit, review] %>
                                <%= link_to "削除", review, method: :delete, data: {confirm: "この投稿を削除します。よろしいですか？" }%>
                              <% end %>
                              <br>
                              <%= review.content %></td>
          </tr>
          <tr>
            <td rowspan="2"><%= image_tag review.user.image.url, alt:"ユーザー画像", :size => "100x100"%></td>
            <td>
              <% review.review_authors.each do |a| %>
                <%= a.author %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= review.genre %></td>
          </tr>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @reviews %>
  <%= page_entries_info @reviews %>
</div>  
