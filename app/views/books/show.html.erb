<div class="container">
  <h1>読書記録</h1>
  <table class="table", style="table-layout:fixed;width:100%;">
    <colgroup>
      <col style="width:15%">
      <col style="width:85%">
    </colgroup>
    <tr>
      <th><%= Book.human_attribute_name(:title)%></th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th><%= BookAuthor.human_attribute_name(:author)%></th>
      <td>
        <%=@book.book_authors.pluck(:author).join(",") %>
      </td>
    </tr>
    <tr>
      <th><%= Book.human_attribute_name(:genre)%></th>
      <td><%= @book.genre %></td>
    </tr>
    <tr>
      <th><%= Book.human_attribute_name(:finished_at)%></th>
      <td><%= @book.finished_at %></td>
    </tr>
    <tr>
      <th><%= Book.human_attribute_name(:description)%></th>
      <td style="word-wrap:break-word;"><%= @book.description %></td>
    </tr>
  </table>

  <% if @book.owned_by?(current_user) %>
    <%= link_to "編集", [:edit, @book]%>
    <%= link_to "削除", @user,method: :delete, data:{ confirm:"この記録を削除します。よろしいですか？"} %>
  <% end %>
</div>

