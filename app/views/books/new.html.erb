<div class="container">
  <h3>読書記録を追加する</h3>
  <%= render "shared/errors", obj: @book %>


  <%= form_with model: @book, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title,class:"form-control title-field" %>
    </div>

    <%= f.fields_for :book_authors do |a| %>
      <div class="form-group">
        <%= a.label :author %>
        <%= a.text_field :author,class:"form-control authors-field"%>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :finished_at ,class:"date-label"%>
      <%= f.date_select :finished_at, {start_year: 1990, end_year: Time.current.year,use_month_numbers: true}, {class:"form-control date-field"} %>
    </div>
    <div class="form-group">
      <%= f.label :genre %>
      <%= f.text_field :genre,class:"form-control genre-field" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, cols: 40, rows: 10,class:"form-control content-field" %>
    </div>
    <%= f.submit %>
  <% end %>
</div> 
